<form class="" action="/<%= @book.id%>" method="post">
  <div class="">
    <label>Title</label>
    <input type="text" value ="<%= @book.title%>" name="title" placeholder="Enter a title">
  </div>
  <div class="">
    <label>Author:</label>
    <input type="text" value ="<%= @book.author%>" name="author" placeholder="Enter the name of the author">
  </div>
  <div class="">
    <label>Description:</label>
    <input type="text" name="description" value="<%= @book.description%>" placeholder="Enter the description of the book">
  </div>
  <div class="">
  <% if (@book.id) %>
    <input type="hidden" name="_method" value="PUT">
    <% end %>
    <input type="submit" value="Save Post">
  </div>
</form>
